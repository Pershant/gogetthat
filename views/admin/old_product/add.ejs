<%- include('../partials/header'); %>

<!-- Main Content -->
<div class="main-content">
  <section class="section">
    <div class="section-header">
      <h1 id="animated_box"><%= currentModule; %></h1>
    </div>

    <div class="section-body animate__animated  animate__backInUp">

      <div class="row">
        <div class="col-8 offset-2">
          <div class="card">
            <div class="card-header">
              <h4><%= currentSubModule %></h4>
            </div>
            <div class="card-body">
              <form id="productAddEditForm" class="form_advanced_validation"
                action="/<%= prefixBaseName; %>/product/addUpdateProduct" method="POST" autocomplete="off"
                enctype="multipart/form-data">

                <div class="form-group">
                  <label>Name</label>
                  <div class="input-group">
                    <div class="input-group-prepend">
                      <div class="input-group-text">
                        <i class="fas fa-cube"></i>
                      </div>
                    </div>
                    <input type="text" class="form-control" name="name" required>
                  </div>
                </div>

                <div class="form-group">
                  <label>Image</label>
                  <div class="input-group">
                    <div class="input-group-prepend">
                      <div class="input-group-text">
                        <i class="fas fa-image"></i>
                      </div>
                    </div>
                    <div id="image-preview" class="image-preview"
                      style="background-image: url('/uploads/default/default_image.jpg'); background-size: cover; background-position: center center;">
                      <label for="image-upload" id="image-label">Choose File</label>
                      <input type="file" name="image" id="image-upload" />
                    </div>
                  </div>
                </div>

                <div class="form-group">
                  <label>Description</label>
                  <div class="input-group">
                    <div class="input-group-prepend">
                      <div class="input-group-text">
                        <i class="fas fa-cube"></i>
                      </div>
                    </div>
                    <textarea class="form-control" name="description" style="min-height: 100px;" required></textarea>
                  </div>
                </div>

                <div class="form-group">
                  <label>Brand Name</label>
                  <div class="input-group">
                    <div class="input-group-prepend">
                      <div class="input-group-text">
                        <i class="fas fa-cube"></i>
                      </div>
                    </div>
                    <input type="text" class="form-control" name="brandName" required>
                  </div>
                </div>

                <div class="form-group">
                  <label>MRP</label>
                  <div class="input-group">
                    <div class="input-group-prepend">
                      <div class="input-group-text">
                        <i class="fas fa-dollar-sign"></i>
                      </div>
                    </div>
                    <input type="text" class="form-control" name="mrp" required>
                  </div>
                </div>

                <div class="form-group">
                  <label> Percentage Discount</label>
                  <div class="input-group">
                    <div class="input-group-prepend">
                      <div class="input-group-text">
                        <i class="fas fa-percent"></i>
                      </div>
                    </div>
                    <input type="text" class="form-control" name="percentageDiscount" required>
                  </div>
                </div>

                <div class="form-group">
                  <label> Length</label>
                  <div class="input-group">
                    <div class="input-group-prepend">
                      <div class="input-group-text">
                        <i class="fas fa-ruler-vertical"></i>
                      </div>
                    </div>
                    <input type="text" class="form-control" name="length" required>
                  </div>
                </div>

                <div class="form-group">
                  <label> Width</label>
                  <div class="input-group">
                    <div class="input-group-prepend">
                      <div class="input-group-text">
                        <i class="fas fa-ruler-vertical"></i>
                      </div>
                    </div>
                    <input type="text" class="form-control" name="width" required>
                  </div>
                </div>

                <div class="form-group">
                  <label> Height</label>
                  <div class="input-group">
                    <div class="input-group-prepend">
                      <div class="input-group-text">
                        <i class="fas fa-ruler-vertical"></i>
                      </div>
                    </div>
                    <input type="text" class="form-control" name="height" required>
                  </div>
                </div>

                <div class="form-group">
                  <label>Dimensions Unit</label>
                  <div class="input-group">
                    <div class="input-group-prepend">
                      <div class="input-group-text">
                        <i class="fas fa-ruler-vertical"></i>
                      </div>
                    </div>
                    <select name="dimensionsUnit" class="form-control select2" required>
                      <option value="">Select Dimensions Unit</option>
                      <option value="0">
                        Centimeters</option>
                      <option value="1">
                        Inches</option>
                      <option value="2">
                        Meters</option>
                    </select>
                  </div>
                </div>

                <div class="form-group">
                  <label> Weight</label>
                  <div class="input-group">
                    <div class="input-group-prepend">
                      <div class="input-group-text">
                        <i class="fas fa-weight"></i>
                      </div>
                    </div>
                    <input type="text" class="form-control" name="weight" required>
                  </div>
                </div>

                <div class="form-group">
                  <label>Weight Unit</label>
                  <div class="input-group">
                    <div class="input-group-prepend">
                      <div class="input-group-text">
                        <i class="fas fa-weight"></i>
                      </div>
                    </div>
                    <select name="weightUnit" class="form-control select2" required>
                      <option value="">Select Weight Unit</option>
                      <option value="0">
                        KG</option>
                      <option value="1">
                        Pounds</option>
                    </select>
                  </div>
                </div>

                <%
                  if (adminData.role == 3) { 
                %>
                <div class="form-group">
                  <label> Tax Category</label>
                  <div class="input-group">
                    <div class="input-group-prepend">
                      <div class="input-group-text">
                        <i class="fas fa-percent"></i>
                      </div>
                    </div>
                    <select name="taxCategoryId" class="form-control select2" required>
                      <option value="">Select Tax Category</option>
                      <% taxCategories.forEach(taxCategory => { %>
                      <option value="<%= taxCategory.id; %>">
                        <%= taxCategory.taxCategory; %>
                      </option>
                      <% }) %>
                    </select>
                  </div>
                </div>
                <%
                  }
                %>

                <div class="form-group">
                  <label>Tags</label>
                  <div class="input-group">
                    <div class="input-group-prepend">
                      <div class="input-group-text">
                        <i class="fas fa-tags"></i>
                      </div>
                    </div>
                    <select name="tags" class="form-control select2_tags" multiple>
                    </select>
                  </div>
                </div>

                <div class="form-group">
                  <label> Category</label>
                  <div class="input-group">
                    <div class="input-group-prepend">
                      <div class="input-group-text">
                        <i class="fas fa-list"></i>
                      </div>
                    </div>
                    <select id="productCategorySelect" name="categoryId" class="form-control select2" required>
                      <option value="">Select Category</option>
                      <% categories.forEach(category => { %>
                      <option value="<%= category.id; %>">
                        <%= category.name; %>
                      </option>
                      <% }) %>
                    </select>
                  </div>
                </div>

                <div class="subCategoryContainer">
                  <div class="form-group">
                    <label> Sub Category</label>
                    <div class="input-group">
                      <div class="input-group-prepend">
                        <div class="input-group-text">
                          <i class="fas fa-list"></i>
                        </div>
                      </div>
                      <select name="subCategoryId" class="form-control select2" required>
                        <option value="">Select Category First</option>
                      </select>
                    </div>
                  </div>
                </div>

                <div class="product_specification_container">
                  <div class="row">
                    <div class="col-5 col-md-5 col-lg-5">
                      <div class="form-group">
                        <label>Product Specification Name</label>

                        <div class="input-group">
                          <div class="input-group-prepend">
                            <div class="input-group-text">
                              <i class="fas fa-signature"></i>
                            </div>
                          </div>
                          <input type="text" class="form-control" name="specificationName" value="" required>
                        </div>
                      </div>
                    </div>
                    <div class="col-5 col-md-5 col-lg-5">
                      <label>Product Specification Value</label>
                      <div class="form-group">
                        <div class="input-group">
                          <div class="input-group-prepend">
                            <div class="input-group-text">
                              <i class="fas fa-signature"></i>
                            </div>
                          </div>
                          <input type="text" class="form-control" name="speecificationValue" value="" required>
                        </div>
                      </div>
                    </div>
                    <div class="col-2 col-md-2 col-lg-2">

                    </div>

                  </div>
                </div>
                <div class="row">
                  <a href="javascript:void(0)" class="btn btn-icon btn-primary add_product_specification"
                    style="width: calc(83.3% + -12px);"><i class="fas fa-plus"></i></a>
                </div>

                <br />
                <br />
                <br />

                <div class="form-group row mb-4">
                  <div class="col-sm-12 col-md-7 offset-4">
                    <input type="hidden" class="form-control" name="status" value="1">

                    <button type="button" class="btn btn-secondary cancel_btn">Cancel</button>
                    <button type="submit" class="btn btn-primary">Add</button>
                  </div>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>

  </section>
</div>


<%- include('../partials/footer'); %>

<script>
  $(document).ready(function () {


  });
</script>