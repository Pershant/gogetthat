<%- include('../partials/header'); %>

  <!-- Main Content -->
  <div class="main-content">
    <section class="section">
      <div class="section-header">
        <h1 id="animated_box">
          <%= currentModule; %>
        </h1>
      </div>

      <div class="section-body animate__animated  animate__backInUp">

        <div class="row">
          <div class="col-8 offset-2">
            <div class="card">
              <div class="card-header">
                <h4>
                  <%= currentSubModule %>
                </h4>
              </div>
              <div class="card-body">
                <form id="" class="form_advanced_validation"
                  action="/<%= prefixBaseName; %>/<%= modelBaseName; %>/addUpdate" method="POST" autocomplete="off"
                  enctype="multipart/form-data">





                  <div class="form-group">
                    <label>Question</label>
                    <div class="input-group">
                      <div class="input-group-prepend">
                        <div class="input-group-text">
                          <i class="fas fa-cube"></i>
                        </div>
                      </div>
                      <input type="text" class="form-control" name="question" value="<%= row && row.question; %>" required>
                    </div>
                  </div>

                  <div class="form-group">
                    <label>Answer</label>
                    <div class="input-group">
                      <textarea class="form-control" name="answer" style="min-height: 100px;" required></textarea>
                    </div>
                  </div>


                  <% if (row) { %>
                    <input type="hidden" class="form-control" name="id" value="<%= row && row.id; %>" required>
                    <% } %>
                      <input type="hidden" class="form-control" name="redirectUrl"
                        value="/<%= prefixBaseName; %>/<%= modelBaseName; %>" required>

                      <div class="form-group row mb-4">
                        <div class="col-sm-12 col-md-7 offset-4">
                          <button type="submit" class="btn btn-primary">
                            <%= row ? 'Update' : 'Submit' ; %>
                          </button>
                        </div>
                      </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>

    </section>
  </div>


  <%- include('../partials/footer'); %>