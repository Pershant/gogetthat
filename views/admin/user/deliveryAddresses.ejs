<a href="/admin/user/addDeliveryAddress/<%= user.id; %>" class="btn btn-outline-primary" style="float: right !important;">Add Delivery Address</a>
<br/>
<br/>

<div class="table-responsive">
    <table class="table table-striped table-md datatable">
        <thead>
            <tr>
                <th>Name</th>
                <th>Complete Address</th>
                <th>City</th>
                <th>State</th>
                <th>Country</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            <%
              if (user.userDeliveryAddresses.length > 0) {
                user.userDeliveryAddresses.forEach(row => {
            %>
            <tr>
                <td><%- row.name; %></td>
                <td><%- row.completeAddress; %></td>
                <td><%- row.city; %></td>
                <td><%- row.state; %></td>
                <td><%- row.country; %></td>
                <td>
                    <a href="/admin/user/viewDeliveryAddress/<%= user.id; %>/<%= row.id; %>" class="btn btn-outline-info" >View</a>
                    <a href="/admin/user/editDeliveryAddress/<%= user.id; %>/<%= row.id; %>" class="btn btn-outline-warning" >Edit</a>
                    <button model_id="<%= row.id; %>" model="userDeliveryAddress" model_title="Delivery Address"
                        class="btn btn-outline-danger delete_btn">Delete</button>
                </td>
            </tr>
            <%
                });
              }
            %>
        </tbody>
    </table>
</div>

<div class="form-group row mb-4">
    <div class="col-sm-12 col-md-7 offset-4">

        <button type="button" class="btn btn-secondary cancel_btn">Back</button>
        %>
    </div>
</div>